{
  "variables": {
	"user": "vagrant",
	"password": "vagrant",
	"disk_size": "100000",
	"debian_mirror": "http://mirror.switch.ch/ftp/mirror/debian-cd"
  },

  "builders": [
    {
      "type": "qemu",
	  "format": "qcow2",
	  "accelerator": "kvm",
	  "disk_size": "{{user `disk_size`}}",

      "iso_url": "{{user `debian_mirror`}}/8.2.0/amd64/iso-cd/debian-8.2.0-amd64-netinst.iso",
      "iso_checksum": "d393d17ac6b3113c81186e545c416a00f28ed6e05774284bb5e8f0df39fcbcb9",
      "iso_checksum_type": "sha256",

      "http_directory": "http",

      "ssh_username": "{{user `user`}}",
      "ssh_password": "{{user `password`}}",
      "ssh_wait_timeout": "20m",

	  "boot_wait": "2s",
      "boot_command": [
		"<esc><wait>",
		"install <wait>",
		"preseed/url=http://192.168.122.2:{{ .HTTPPort }}/preseed.cfg <wait>",
		"debian-installer=en_US <wait>",
		"auto <wait>",
		"locale=en_US <wait>",
		"kdb-chooser/method=us <wait>",
		"netcfg/get_hostname={{ .Name }} <wait>",
		"netcfg/get_domain=vagrantup.com <wait>",
		"fb=false <wait>",
		"debconf/frontend=noninteractive <wait>",
		"console-setup/ask_detect=false <wait>",
		"console-keymaps-at/keymap=us <wait>",
		"keyboard-configuration/xkb-keymap=us <wait>",
		"<enter><wait>"
      ],

	  "qemuargs": [
		[
		  "-netdev",
		  "user,id=user.0,hostfwd=tcp::3213-:22,net=192.168.122.0/24"
	    ]
	  ]
    }
  ],

  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S sh '{{.Path}}'",
      "scripts": [
		"scripts/grub.sh",
        "scripts/update.sh",
        "scripts/vagrant.sh",
        "scripts/cleanup.sh",
		"scripts/zerodisk.sh"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "vagrant",
      "output": "box/Debian-Jessie-8.2-x86_64-{{.Provider}}.box",
	  "keep_input_artifact": false
    }
  ]
}
